= form_for @photo, :html => { :multipart => true } do |f|
  %p
    = f.label :image
    %br/
    = f.file_field :image        
  %p{class:"edit_caption"}
    = f.label :caption
    %br/
    = f.text_field :caption
  %p
    = f.label :tags
    %br/
    = f.text_area :tags
  %p
    = f.submit 'Update'